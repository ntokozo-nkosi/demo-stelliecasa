<% layout("/layouts/boilerplate") %>
<div class="row col-md-6 offset-3 mb-5">
    <h1>Add new accommodation</h1>
    <form action="/accommodations" method="POST" class="needs-validation" novalidate>
        <label for="title" class="form-label" >Title</label>
        <input type="text" class="form-control" name="title" id="title" required>
        <br>
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" name="location" id="location" required>
        <br>
        <label for="description" class="form-label">Description</label>
        <br>
        <textarea name="description" id="description" cols="30" rows="10" class="form-control" required></textarea>
        <br>
        <!-- <label for="image" class="form-label">Image</label>
        <input type="text" name="image" class="form-control" id="image" value="https://source.unsplash.com/random/?apartment">
        <br> -->
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
            <span class="input-group-text" id="price">R</span>
            <input type="text" name="price" id="price" class="form-control" required>
        </div>
        
        <br>
        <input class="btn btn-success form-control" type="submit">
    </form>
</div>


